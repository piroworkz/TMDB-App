<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BlueLabsTMDBApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_light_color</item>
        <item name="colorSecondaryVariant">@color/secondary_dark_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/secondary_color</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/Theme.BlueLabsTMDBApp.Toolbar</item>
    </style>

    <style name="Theme.BlueLabsTMDBApp.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="color">@color/primary_dark_color</item>
    </style>

    <style name="Theme.BlueLabsTMDBApp.NoActionbar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
<!--        <item name="android:statusBarColor">@android:color/transparent</item>-->
    </style>

    <style name="AppTheme.DarkOverlay" parent="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar" />
</resources>